@model IEnumerable<_2x2CRM.mvc.Models.Area.Issue>

@{
    ViewBag.Title = "Index";
}

<h2>Issues</h2>

<div id="issue-details-index">
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.OpDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supporter.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.Name)
            </th>
        </tr>
        <tr v-for="item in filtered_items" :key="item.Id">
            
        </tr>
    </table>

</div>

<script>
    var issueList = new Vue({
        el: "issue-details-index",
        data: {
            items: @Html.Raw(Json.Encode(Model)),
            filter: "",
            pageNo: 1,
            pageRows: 40,
            pages: 0,
            rows: 0
        }
    });
</script>